-# Default Menu
- unless content_for?(:header_menu)
  = content_for :header_menu do
    %nav#menu
      %ul
        = li_menu_link 'news'
        = li_menu_link 'features'
        = li_menu_link 'plans'
        = li_menu_link 'demo'
        = li_menu_link 'showcase', page: 'customer-showcase'
        = li_menu_link 'help'
        %li= link_to "login", custom_url('?p=login'), onclick: "return SublimeVideo.showPopup('login')"
        %li.signup= link_to "sign up", custom_url('?p=signup'), onclick: "return SublimeVideo.showPopup('signup')"

= yield :header_menu

- unless request.subdomain == 'my'
  = content_for :javascript_bottom do
    #popup_signup.popup{ style: "display:#{params[:p] == 'signup' ? 'block' : 'none'}" }
      .popup_wrap
        .lights
          .content= render template: '/users/new'
          = link_to "/", class: 'close', onclick: "return SublimeVideo.hidePopup('signup')" do
            %span Close

    #popup_login.popup{ style: "display:#{params[:p] == 'login' ? 'block' : 'none'}" }
      .popup_wrap
        .lights
          .content= render template: '/users/sessions/new'
          = link_to "/", class: 'close', onclick: "return SublimeVideo.hidePopup('login')" do
            %span Close

