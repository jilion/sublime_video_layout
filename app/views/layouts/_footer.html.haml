%footer
  .wrap
    %nav
      .col
        %h4 Solutions
        %ul
          %li= link_to "Horizon Framework", layout_url('horizon-framework')
          %li= link_to "Modular Player", layout_url('modular-player')
          %li= link_to "Tailor-Made Players", layout_url('tailor-made-players')
          %li= link_to "Testimonials", layout_url('testimonials')
      .col
        %h4 Support
        %ul
          %li= link_to "Help", layout_url('help')
          %li= link_to "Documentation", docs_url('')
          %li= link_to "Forum", "http://getsatisfaction.com/sublimevideo", onclick: "window.open(this); return false"
          %li= link_to "Player Releases", docs_url('beta/releases')
      .col
        %h4 Company
        %ul
          %li= link_to "About", layout_url('about')
          %li= link_to "News", layout_url('news')
          %li= link_to "Contact Us", layout_url('contact')
          %li.jobs
            = link_to "Jobs", "http://jilion.com/jobs"
            -# %span.note= "Join the Team!"

    .right
      %p.twitter
        = "Follow"
        = link_to "@jilion", "http://twitter.com/jilion"
        = "for the latest news."
      .newsletter
        %form{ action: "http://jilion.createsend.com/t/r/s/shylrr/", method: "post", id: "subForm" }
          %p
            %label{ for: "shylrr-shylrr" } Subscribe for news
          .field_wrap
            %input.field{ type: "text", name: "cm-shylrr-shylrr", id: "shylrr-shylrr", size: "25", placeholder: "Email" }
            %button{ type: "submit" }
              %span= "Subscribe"
      .networks
        %a{ href: "http://twitter.com/share", class: "twitter-share-button", data: { url: "http://sublimevideo.net", text: "Check out SublimeVideo HTML5 Video Player by @Jilion -", count: "horizontal", related: "jilion:Follow @Jilion for the latest news!" } } Tweet
        = javascript_include_tag "//platform.twitter.com/widgets.js"
        .g-plusone{ 'data-size' => "small", 'data-href' => "http://sublimevideo.net"}
        :javascript
          (function() {
            var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
            po.src = 'https://apis.google.com/js/plusone.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
          })();
        %iframe{ src: "//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fsublimevideo&send=false&layout=button_count&width=130&show_faces=false&action=like&colorscheme=dark&font&height=21", scrolling: "no", frameborder: "0", style: "border:none; overflow:hidden; width:130px; height:21px;", allowTransparency: "true" }
      %p.service_by
        = "SublimeVideo is a service by"
        = link_to "http://jilion.com", class: "jilion" do
          %span= "Jilion"

    .footer_break
    %p.copyright
      = link_to "Terms & Conditions", my_url('terms')
      = "|"
      = link_to "Privacy Policy", my_url('privacy')
      = raw "| Copyright &copy; #{Time.now.utc.year} Jilion&reg; &mdash; SublimeVideo and Jilion are registered trademarks."

