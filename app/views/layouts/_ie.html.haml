- @ie_min ||= 7

= content_for :meta do
  = surround "<!--[if lt IE #{@ie_min}]>".html_safe, "<![endif]-->".html_safe do
    %meta{ "http-equiv" => "Refresh", content: "0;url=http://jilion.com/ie" }
    %style{ type: "text/css", media: "screen" }= "body {background:#fff;display:none;}"

= content_for :css do
  /[if lte IE 8]
    = stylesheet_link_tag("ie")

= content_for :javascript do
  /[if lte IE 9]
    = javascript_include_tag("//html5shiv.googlecode.com/svn/trunk/html5.js")
