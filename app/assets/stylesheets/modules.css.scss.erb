@import "bourbon";

$darkblue:#003165;
$b-blue:#5695c5;
$b-violet:#a389d5;

// Buttons

.btn {
  padding:0.4em 1em;
  background:#4088cb;
  color:#fff;
  font-weight:500;
  border:3px solid transparent;
  font-family:inherit;
  font-size:1em;
  font-weight:normal;
  cursor:pointer;
  @include box-sizing(border-box);
  @include inline-block;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @include border-left-radius(4px);
  @include border-right-radius(4px);
}

.btn:focus {
  outline:none;
  border:3px solid transparentize(rgba(255,255,255,0.6),0.2);
}

.full {
  display:block;
}

// Colors

.orange {
  background:#f66929;
  color:#fff;
}

.elec-blue {
  background:#299ae4;
  color:#fff;
}

.green {
  background:#009546;
  color:#fff;
}

.light-blue {
  background:transparentize($b-blue,0.6);
  color:darken($b-blue,25%);
}

.light-violet {
  background:transparentize($b-violet,0.5);
  color:darken($b-violet,25%);
}

// Titles

.section-title {
  font-size:3em;
  font-weight:300;
  padding:0.4em 0;
  @media screen and (max-width:568px) {
    font-size:2em;
  }
}

.text-title {
  font-size:1.9em;
  padding:1em 0 0.5em;
}

.title {
  padding:1em 0 0.3em;
}

// Grids

.two-columns-grid {
  padding:1em 0 0;
}

.two-columns-grid > li {
  display:block;
  padding:1em 6% 1em 0;
  margin:0;
  width:44%;
  height:9em;
  float:left;
  font-size:0.85em;
  @media screen and (max-width:568px) {
    width:100%;
    height:auto;
    float:none;
    padding:1em 0;
    font-size:0.9em;
  }
}

.one-column-900 > li {
  @media screen and (max-width:900px) {
    width:100%;
    height:auto;
    float:none;
    padding:1em 0;
    font-size:0.9em;
  }
}


.two-columns-grid > li > img {
  float:left;
  margin:0 20px 0px 0;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
}

.two-columns-grid > li > p {
  font-size:1.15em;
  padding-top:0;
  line-height:1.4em;
}

// Header

.site-logo {
  float:left;
  margin:0.35em 0 0 0;
  @media screen and (max-width: 900px) {
    float:none;
    text-align:center;
  }
}

.site-logo a:hover {color:#7690B3}

@media screen and (min-width: 900px) {
  .site-logo {
    margin:0.25em 0 0 0.2em;
  }
  .l-mini .site-logo img {
    width:190px;
  }
}

.site-logo-label {
  float:right;
  font-weight:200;
  font-style:italic;
  line-height:1.75em;
  margin-left:8px;
  @media screen and (max-width: 900px) {
    display:none;
  }
}


// Main navigation

.main-nav {
  float:right;
  @media screen and (max-width:920px) {
    float:none;
    width:100%;
    text-align:center;
  }
}

.main-nav ul > li {
  margin:8px 14px;
  @media screen and (max-width:568px) {
    margin:4px 5px;
  }
}

@media screen and (min-width: 900px) {
  .l-mini .main-nav ul > li {
    margin:3px 10px;
  }
}

.main-nav li a {
  display:block;
  padding:0 8px 2px;
  font-size:1.3em;
  @media screen and (max-width:568px) {
   font-size:1em;
  }
}

@media screen and (min-width: 900px) {
  .l-mini .main-nav li a {
    font-size:1em;
  }
}

.main-nav li > a.is-active {
  background:transparentize(#7690B3, 0.5);
  color:#fff;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
}

.main-nav .l-popup > a:hover {
  color:#7690B3;
}

.main-nav li a.orange {
  color:#fff;
  font-weight:300;
  padding:0.2em 0.5em 0.3em;
}

.main-nav .l-popup > a {
  position:relative;
  z-index:3;
  cursor:default;
  padding:0;
}

.main-nav .l-popup > a small {
  font-size:0.7em;
  margin-left:4px;
}

.main-nav .l-popup:hover .l-stacked a:hover {
  color:$darkblue;
}

.main-nav .l-popup:hover .l-stacked {
  display:block;
}

.main-nav .l-stacked {
  display:none;
  padding-top:47px;
  position:absolute;
  top:-7px;
  left:-16px;
  z-index:2;
  background:#fff;
  text-align:left;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @include border-left-radius(4px);
  @include border-right-radius(4px);
  @include box-shadow(0 1px 4px 0 rgba(0,0,0,0.3));
}

@media screen and (min-width: 900px) {
  .l-mini .main-nav .l-stacked {
    padding-top:30px;
    top:-4px;
    left:-10px;
  }
}

.main-nav .l-stacked > li {
  display:block;
  margin:0 16px 8px;
}

.main-nav .l-stacked > li a {
  padding:0 0 2px;
}

// Headline

.headline {
  padding:35px 30px 40px;
  background:#93a2b9;
  font-size:3em;
  font-weight:300;
  text-align:center;
  color:#fff;
  @media screen and (max-width: 1150px) {
    padding:25px;
    font-size:2.5em;
  }
  @media screen and (max-width: 950px) {
    padding:20px;
    font-size:2em;
  }
  @media screen and (max-width:568px) {
    padding:10px;
    font-size:1.3em;
  }
}

.headline small {
  font-size:0.8em;
}

.headline a {
  display:inline-block;
  margin-right:10px;
  padding:0 18px 13px;
  background:rgba(0,0,0,0.2);
  color:inherit;
  @include border-top-radius(5px);
  @include border-bottom-radius(5px);
  @include border-left-radius(5px);
  @include border-right-radius(5px);
}

.headline a:hover {
  background:rgba(0,0,0,0.5);
}

// Titles

h2.title {
  @media screen and (max-width:920px) {
    font-size:2em;
  }

  @media screen and (max-width:568px) {
    font-size:1.5em;
  }
}

// Tagline

.tagline {
  padding:1.3em 0 1.5em;
  text-align:center;
  @media screen and (max-width:568px) {
    padding:0.8em 0 1.2em;
  }
}

.tagline h2 {
  padding:5px 0 0;
  font-weight:300;
  font-size:2.3em;
  @media screen and (max-width:920px) {
    font-size:1.8em;
  }
  @media screen and (max-width:568px) {
    font-size:1.5em;
  }
}

.tagline .btn-wrap {
  display:inline;
  font-size:0.85em;
  @media screen and (max-width:568px) {
    font-size:1em;
    display:block;
    margin:13px 0 0;
  }
}

.tagline .btn {
  padding:0.2em 0.5em 0.3em;
  margin-right:0.25em;
  font-weight:300;
}

.tagline small {
  font-size:0.8em;
}

// Footer

.footer-links {
  width:60%;
  float:left;
  @media screen and (max-width:920px) {
    width:100%;
    float:none;
    text-align:center;
  }
}

.footer-col {
  width:33%;
  float:left;
  line-height:2em;
  @media screen and (max-width:568px) {
    width:100%;
    margin:0;
    float:none;
    font-size:1.2em;
  }
}

.footer-text {
  float:right;
  width:35%;
  padding:3.5% 5% 0 0;
  text-align:center;
  font-size:1.5em;
  line-height:1.6em;
  @media screen and (max-width:920px) {
    width:100%;
    float:none;
    padding-right:0;
    font-size:1.1em;
  }
}

.footer-subscribe {
  padding-top:3%;
}

.footer-networks {
  padding-top:1.5%;
}

.footer-copyright {
  padding:40px 20px 0;
  text-align:center;
  font-size:0.8em;
}

section.features {
  padding-top:30px;
}

// Go to anchor

.go-to-anchor {
  text-align:center;
}

.go-to-anchor > li {
  font-size:1.4em;
  margin:35px 1.4% 25px;
  width:24%;
  @media screen and (max-width:920px) {
    width:30%;
    margin-left:1%;
    margin-right:1%;
  }

  @media screen and (max-width:568px) {
    display:block;
    width:auto;
    margin-top:20px;
    margin-bottom:0px;
  }
}

.go-to-anchor li > a {
  display:block;
  padding:14px 14px;
//  color:#fff;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
}

// Two columns layout

.two-col-wrapper {
  @include display-box;
  position:relative;
}

.two-col-sidebar {
//  @include box-flex(1);
  width:240px;
  background:#BBCCE2;
  @media screen and (max-width: 900px) {
    max-height:100%;
    height:100%;
    position:absolute;
    top:0;
    left:0;
    z-index:0;
  }
}

.two-col-shadow {
  width:240px;
  position:absolute;
  top:0;
  left:0;
  bottom:0;
  pointer-events:none;
  @include box-shadow(inset 0px 0 16px rgba(0,0,0,0.5));
  @media screen and (max-width: 900px) {
    @include box-shadow(inset -6px 0 10px rgba(0,0,0,0.2));
  }
}

.two-col-sidebar ul ul li {
//  padding:0.5em;
  font-size:0.9em;
}

.two-col-sidebar li a {
  display:block;
  background:transparentize($darkblue,0.8);
  color:$darkblue;
  font-weight:500;
  padding:0.5em;
  border-bottom:1px solid rgba(0,0,0,0.15);
  @include box-shadow(inset rgba(255,255,255,0.13) 0 1px 0)
}

.two-col-sidebar li li a {
  border-left:10px solid transparentize($darkblue,0.6);
}

.two-col-sidebar-active {
  background:#1f3044 !important;
  color:rgba(255,255,255,0.8) !important;
  border-color:transparentize(lighten($darkblue, 65%),0.9) !important;
}

.two-col-search-form {
  position:relative;
}

.two-col-search-form .icon-search {
  position:absolute;
  top:15px;
  left:5px;
  font-size:1em;
}

.two-col-search-form input[type=text] {
  width:240px;
  padding-left:32px;
  margin:0;
  @include border-top-radius(0);
  @include border-bottom-radius(0);
  @include box-shadow(none);
}

.two-col-menu-title {
  color:transparentize($darkblue,0.3);
  font-size:0.7em;
  text-transform:uppercase;
  letter-spacing:0.1em;
  padding:0.8em 0.5em;
  border-bottom:1px solid rgba(0,0,0,0.15);
  @include box-shadow(inset rgba(255,255,255,0.13) 0 1px 0);
}

.two-col-container {
  @include box-flex(1);
  padding:0;
  background-color:#eef2f6;
  position:relative;
  z-index:1;
//  max-height:800px;
//  @media screen and (max-width: 900px) {
//    max-height:none;
//  }
}

.two-col-header {
  @include display-box;
  @include box-pack(justify);
  background:#fff;
  height:50px;
//  padding:0.7em 0;
  border-bottom:1px solid rgba(0,0,0,0.15);
  @media screen and (max-width:900px) {
    height:auto;
    @include box-orient(vertical);
  }
}

.two-col-title {
  @include box-flex(1);
  font-size:1.2em;
  padding:0em 0.8em 0 0;
  line-height:50px;
  max-height:50px;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  @media screen and (max-width:568px) {
    font-size:1.1em;
  }
}

.two-col-header .icon-list {
  @include inline-block;
  width:50px;
  height:50px;
  line-height:50px;
  text-align:center;
  font-size:1em;
  color:$darkblue;
  border-right:1px solid transparentize(#1f3044, 0.8);
  margin-left:0;
  @media screen and (min-width: 900px) {
    display:none;
  }
}

.two-col-title strong {
  padding-left:0.8em;
}

.two-col-actions-menu {
  @media screen and (max-width:900px) {
    max-width:none;
    min-width:0;
    width:100%;
    background:#fff;
    border-top:1px solid transparentize(#1f3044, 0.8);
  }
}

.two-col-actions-menu li {
  float:left;
  padding:0.65em 0.6em 0 0;
  @media screen and (max-width:900px) {
    padding:0.6em 0 0.6em 0.6em;
  }
}

.two-col-actions-menu li a.two-col-action-button {
  font-size:0.9em;
  font-weight:400;
  background:transparentize(lighten($darkblue, 50%),0.75);
  padding:0.12em 0.7em 0.2em;
  @include inline-block;
  @include border-left-radius(20px);
  @include border-right-radius(20px);
}

.two-col-actions-menu li a.active {
  background:#1f3044;
  color:#fff;
}

.two-col-content {
  max-width:1000px;
//  max-height:729px;
  padding:0 2em 20px;
  font-size:0.9em;
  @media screen and (max-width: 900px) {
    min-height:410px;
  }
  @media screen and (max-width:568px) {
    padding:1em;
  }
}
