@import "bourbon";

$darkblue:#003165;

* {
  margin:0;
  padding:0;
}

body {
  background:#eef2f6;
  font-family:"omnes-pro","Helvetica Neue",Helvetica,Arial,sans-serif;
  font-size:18px;
  font-weight:300;
  color:#7690B3;
}

h2 {
  font-size:2.7em;
  font-weight:normal;
  color:$darkblue;
}

h3 {
  font-size:1.3em;
  font-weight:normal;
  color:$darkblue;
}

h4 {
  font-size:1.3em;
  font-weight:normal;
  color:$darkblue;
}

h5 {
  padding:30px 0 10px;
  font-size:1em;
  font-weight:300;
  text-transform:uppercase;
  letter-spacing:0.15em;
}

p {
  font-size:1.2em;
  line-height:1.6em;
  padding:0.5em 0;
  @media screen and (max-width:568px) {
    font-size:1.1em;
  }
}

ul {
  list-style-type:none;
}

blockquote {
  font-family:"kepler-std-extended-display", Georgia, Times, serif;
  font-style:italic;
}

strong {
  color:$darkblue;
  font-weight:500;
}

a {
  text-decoration:none;
  color:#1185ff;
}

img {
  -webkit-user-drag:none;
}

code {
  font-family: Consolas, Monaco, 'Andale Mono', monospace;
  font-size:0.85em;
}

input[type=text] {
  @include inline-block;
  min-width:40%;
  padding:0.2em 0.4em;
  margin-right:0.5em;
  line-height:1.5em;
  font-family:inherit;
  font-size:1.2em;
  font-weight:300;
  color:$darkblue;
  border:3px solid transparent;
  @include box-sizing(border-box);
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @include box-shadow(transparentize($darkblue,0.92) 0 2px 0);
}

input[type=text]:focus {
  outline:none;
  border:3px solid transparentize($darkblue,0.6);
}

::-webkit-input-placeholder {
   color:#7690B3;
}

:-moz-placeholder { /* Firefox 18- */
   color:#7690B3;
}

::-moz-placeholder {  /* Firefox 19+ */
   color:#7690B3;
}

:-ms-input-placeholder {
   color:#7690B3;
}

.spacer {
  clear:both;
}

.spacer-iphone {
  @media screen and (max-width:568px) {
    clear:both;
  }
}